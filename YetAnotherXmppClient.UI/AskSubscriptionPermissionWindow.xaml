<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="AskSubscriptionPermissionWindow">
  <StackPanel Orientation="Vertical">    
    <TextBlock Text="{Binding RequestingJid, StringFormat=Grant {0} permission to see your status?" />
    <StackPanel Orientation="Horizontal">
      <Button Content="Yes" />
      <Button Content="No" />
    </StackPanel>
  </StackPanel>
</Window>